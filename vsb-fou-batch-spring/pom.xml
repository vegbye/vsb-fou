        <dependency>
            <groupId>org.springframework.batch</groupId>
            <artifactId>spring-batch-admin-manager</artifactId>
            <version>${spring-batch-admin.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>log4j</groupId>
